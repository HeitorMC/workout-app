<h1>Exercises</h1>

<div id='exercises'>
  <table class='table table-bordered'>
    <thead class='table-light'>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= link_to 'Show this exercise', exercise, class:'btn btn-info' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New exercise', new_exercise_path, class:'btn btn-primary' %>
